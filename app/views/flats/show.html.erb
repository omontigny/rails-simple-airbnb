<div class="container">
  <div class="row">
    <div class="col-sm-8 col-sm-offset-2">
      <div class="title"><%=@flat.name%>
      </div>
    </div>
    <div class='content'>
      <h4>A bit more about this flat...<h4>
      <p><%= @flat.description %></p>
      <br>
      <p>Address : <%= @flat.address %></p>
      <h3>Details<h3>
      <br>
      <p>Prix <%= @flat.price_per_night %></p>
      <br>
      <p>People: <%= @flat.number_of_guests %></p>
    </div>
  </div>
  <br>
  <br>
  <%= link_to "Back to list", flats_path %>
</div>
